extends ../layout.pug

block content
  h2.text-center.text-primary Register a New Museum

  form(action="/museums" method="POST")
    label(for="name") Name:
    input#name.form-control(type="text", name="name", required)

    label(for="city") City:
    input#city.form-control(type="text", name="city", required)

    label(for="country") Country:
    input#country.form-control(type="text", name="country", required)

    label(for="image") Image:
    input#image.form-control(type="url", name="image", required)

    input(type="submit", value="Register")